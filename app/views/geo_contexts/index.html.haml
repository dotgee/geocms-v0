- title do
  %h1 Listing Geo Contexts
.no_visualisor
  = paginate @geo_contexts

  %table.listing
    %thead
      %tr
        %th Name
        %th Wmc name
        %th Keywords &amp; desription

    %tbody
      - @geo_contexts.each do |geo_context|
        %tr
          %td
            %h3.name
              = link_to geo_context.name, geo_context
            %p
              = geo_context.taxon.name if geo_context.taxon
            %p
              = geo_context.tags.map(&:name).join(', ')
            .row-actions
              = link_to 'Voir', geo_context
          %td= geo_context.wmc_name
          %td
            %p
              = geo_context.keywords
            %br
            %p
              = truncate(geo_context.description, :length => 35)
  = paginate @geo_contexts
