= map_js
=# render :partial => "shared/category_chooser_modal"              
#category_chooser
  =# render :partial => "shared/category_chooser_accordion"              
  = render :partial => "shared/tabs"
#map_container
  = render :partial => 'shared/content_toolbar'
  #map
    %span#coords
    .map-infos
      .slider-container
        .info-slider.up
      .modal-header
        %h3
          = @geo_context.name
      .modal-body
        %b.label.success Description :
        = @geo_context.description 
        .clear
        %b.label.success WMC :
        = link_to @geo_context.wmc_name, @geo_context.wmc.url, :only_path => false, :id => "wmc"
        .clear
        %b.label.success Mots cl&eacute;s :
        = @geo_context.keywords
  .clear
=# render :partial => "shared/category_chooser_modal"              
= javascript_include_tag "mapInit"
= javascript_include_tag "sharedControlers"
