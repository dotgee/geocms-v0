- title do
  %h1 
    Sign in
.container
  .row
    .span7.offset4
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "form-stacked signin" }) do |f|
        .breadcrumb
          .clearfix
            = f.label :email, :class => "xlInput"
            .input
              = f.email_field :email, :class => "xlInput", :class => "span6"
          .clearfix
            = f.label :password,  :class => "xlInput"
            .input
              = f.password_field :password, :class => "xlInput", :class => "span6"
          .clearfix
            .row
              .span4
                .input.remember_me
                  = f.check_box :remember_me
                  = f.label :remember_me
              .span2
                = f.submit t(:sign_in), :class => "btn primary "
        = render :partial => "devise/shared/links"
