- title do 
  %h1
    Forgot your password?
.container
  .row
    .span7.offset4
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post,  :class => "form-stacked signin" }) do |f|
        .breadcrumb
          = devise_error_messages!
          .clearfix
            = f.label :email
            = f.email_field :email, :class => "span6"
          .clearfix
          %div= f.submit "Send me reset password instructions", :class => "btn primary"
        = render :partial => "devise/shared/links"
