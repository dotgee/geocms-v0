- title do
  %h1
    Sign up
.container
  .row
    .span7.offset4
      = form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => { :class => "form-stacked signin" }) do |f|
        .breadcrumb
          = devise_error_messages!
          .clearfix
            = f.label :email
            = f.email_field :email, :class => "span6"
          .clearfix
            = f.label :password
            = f.password_field :password, :class => "span6"
          .clearfix
            = f.label :password_confirmation
            = f.password_field :password_confirmation, :class => "span6"
          %div= f.submit "Sign up", :class => "btn primary"
        = render :partial => "devise/shared/links"
