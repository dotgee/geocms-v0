.fg-toolbar.ui-widget-header.ui-helper-clearfix
  .fg-buttonset
    = link_to  '#', { :class => "ui-icon-with-text ", :id => "layers_list_btn"} do
      .ui-icon.ui-icon-circle-arrow-e.floating-icon
      %span
        Liste couches
    /position initiale 
    = link_to  '#', { :class => "ui-icon-with-text selectable first_btn",
                      :id => "fullscreen-btn",
                      :"data-original-title" => "Plein &eacute;cran".html_safe,
                    } do
      .ui-icon.ui-icon-arrow-4-diag
    /position initiale 
    = link_to  '#', { :class => "ui-icon-with-text selectable first_btn",
                      :id => "position_btn",
                      :"data-original-title" => "Revenir &agrave; la position initiale".html_safe,
                    } do
      .ui-icon
    /hand control
    = link_to '#', { :class => "ui-icon-with-text measure_control selectable",
                      :"data-original-title" => "Se d&eacute;placer".html_safe, 
                      :rel => "popover",
                      :id => "hand_control"} do
      .ui-icon.hand
    /Zoom in
    = link_to '#', { :class => "ui-icon-with-text selectable measure_control", 
                    :rel => "popover",
                    :"data-original-title" => "Zoomer sur le territoire".html_safe,
                    :id => "zoomin", 
                    :measure_type => "zoomin" } do
      .ui-icon.square_ruler
    %p.pipe 
      |
    /line measurement
    = link_to '#', { :class => "ui-icon-with-text selectable measure_control first",
                    :rel => "popover",
                    :"data-original-title" => "Mesurer une distance. <br />Double cliquer pour valider le trac&eacute;.".html_safe,
                    :id => "ruler_measure", :measure_type => "line" } do
      .ui-icon.ruler
    /area measurement
    = link_to '#', { :class => "ui-icon-with-text selectable measure_control", 
                    :rel => "popover",
                    :"data-original-title" => "Mesurer une surface. <br />Double cliquer pour valider le trac&eacute;.".html_safe,
                    :id => "square_measure", 
                    :measure_type => "polygon" } do
      .ui-icon.square_ruler
    %p.pipe 
      |
    /expert mode
    = link_to  '#', { :class => "ui-icon-with-text selectable first",
                      :"data-original-title" => "Plus de fonctionnalit&eacute;s sur GeoBretagne".html_safe,
                      :rel => "popover",
                      :id => "mapfishapp_btn"} do
      .ui-icon.square_ruler
    /help
    = link_to  '#', { :class => "ui-icon-with-text selectable",
                      :"data-original-title" => "Acc&eacute;der &agrave; l'aide".html_safe,
                      :rel => "popover",
                      :id => "help_btn"} do
      .ui-icon
    %p.pipe 
      |
    /print
    = link_to  '#', { :class => "ui-icon-with-text selectable first", 
                      :"data-original-title" => "Voir la version imprimable".html_safe,
                      :rel => "popover" ,
                      :id => "print_btn"} do
      .ui-icon.square_ruler
    /save
    = link_to  '#', { :class => "ui-icon-with-text selectable", 
                      :"data-original-title" => "Sauvegarder ma carte en WMC".html_safe,
                      :rel => "popover" ,
                      :id => "save_btn"} do
      .ui-icon
    /load
    = link_to  '#', { :class => "ui-icon-with-text selectable", 
                       :"data-original-title" => "Charger une carte en WMC".html_safe,
                       :rel => "popover" ,
                      :id => "load_btn"} do
      .ui-icon.square_ruler

    %input{ :type => "text", :placeholder => "Centrer sur...", :id => "btn-geoname"}
    %span#output_measure.infos
    /%span#coords.infos
    %img(id="progress" src="#{image_path 'loading.gif'}")
    .ui-helper-clearfix

#save_form{:title => "Sauvegarder ma carte"}
  %p
  %label Nom* : 
  %input{ :type => "text", :id => "map_name"}
#load_form{:title => "Charger ma carte en WMC"}
  %input{ :type => "hidden", :id => "authenticity_token", :value => "#{form_authenticity_token}"}
