- title do 
  %h1 Liste des couches

%table
  %tr
    %th Name
    %th Wms url
    %th Description
    %th Origine
    %th Metadata url

  - @layers.each do |layer|
    %tr
      %td
        .name
          = layer.name
        .row-actions
          = link_to 'Voir', layer
          \|
          = link_to 'Modifier', edit_layer_path(layer)
          \|
          = link_to 'Supprimer', layer, :confirm => 'Are you sure?', :method => :delete
      %td= truncate(layer.wms_url, :length => 50)
      %td= layer.description
      %td= layer.origin
      %td= truncate(layer.metadata_url, :length => 50)

%br

= link_to 'Nouvelle Couche', new_layer_path, :class => 'btn primary large'
